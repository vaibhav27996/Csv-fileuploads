<link rel="stylesheet" href="/css/home.css">

<!--THis is hoem page with create project form and project List-->
<div  class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                   <center><h5>Uploads CSV Files</h5></center>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <form action="/files/create"  enctype="multipart/form-data" method="post">
                                <input type="file" name="avatar" accept=".csv" class="form-control" required>
                                <button type="submit" class="btn btn-sm btn-info formBtn"><b>Create</b></button>
                           </form>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>Sr No.</th>
                                    <th>File Name</th>
                                    <th>Action</th>
                                </tr>

                                <% var count=1;
                                    for(files of fileList) { %>
                                    <tr>
                                        <th><%= count; %></th>
                                        <th><a href="/files/view/<%= files._id%>"><%= files.name%></a></th>
                                        <th><button type="button" class="btn btn-sm btn-danger"><a href="/files/delete/<%= files._id%>">Delete</a></button></th>
                                    </tr>
                                <% count++;
                                    } %>
                            </table>
                        </div>
                    </div>
                   
                   
                </div>
            </div>
        </div>
    </div>
</div>